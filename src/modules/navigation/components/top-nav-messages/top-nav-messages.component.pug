li.nav-item.dropdown.no-caret.mr-3.sb-dropdown-notifications(
    *ngIf='messagesService.messages$ | async as messages',
    ngbDropdown,
    [placement]='placement',
    display='dynamic'
)
    a#navbarDropdownMessages.btn.sb-btn-icon.sb-btn-transparent-dark.dropdown-toggle(
        ngbDropdownToggle,
        data-cy='messagesMenu',
        role='button',
        aria-haspopup='true',
        aria-expanded='false'
    )
        i-feather(name='mail')
    .dropdown-menu.border-0.shadow.animated--fade-in-up(
        ngbDropdownMenu,
        aria-labelledby='navbarDropdownMessages'
    )
        h6.dropdown-header.sb-dropdown-notifications-header
            i-feather.mr-2(name='mail')
            | Message Center
        sbpro-top-nav-messages-item(*ngFor='let message of messages', [message]='message')
